    while True:
        try:
            answer = int(input(f"{question} (1-ì „í˜€ ì•„ë‹ˆë‹¤, 5-ë§¤ìš° ê·¸ë ‡ë‹¤): "))
            if 1 <= answer <= 5:
                return answer
            else:
                print("âš ï¸ 1ë¶€í„° 5 ì‚¬ì´ì˜ ìˆ«ìë¡œ ì…ë ¥í•´ì£¼ì„¸ìš”.")
        except ValueError:
            print("âš ï¸ ìˆ«ìë¡œ ì…ë ¥í•´ì£¼ì„¸ìš”.")

